<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.core.widget.NestedScrollView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_marginBottom="50dp"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView app:cardElevation="5dp"
            android:layout_margin="3dp"
            app:cardCornerRadius="20dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto">
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/btn_rounded_corner_yellow"
                    android:textColor="@color/white"
                    android:text="@string/patient_details"
                    android:padding="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="@string/patient_details"
                    android:padding="5dp"/>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2.4">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/blue_A400"
                        android:text="@string/patient_name"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4"
                        android:text=": Mg Kaung"
                        android:id="@+id/pname"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:padding="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2.4">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/blue_A400"
                        android:text="@string/patient_dateOfbirth"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4"
                        android:text=": Mg Kaung"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:id="@+id/pdateofBirth"
                        android:padding="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2.4">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/patient_height"
                        android:textColor="@color/blue_A400"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4"
                        android:text=": Mg Kaung"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:id="@+id/pheight"
                        android:padding="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2.4">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/blue_A400"
                        android:text="@string/patient_blood_type"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text=": Mg Kaung"
                        android:id="@+id/pbloodtype"
                        android:padding="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2.4">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/patient_weight"
                        android:textColor="@color/blue_A400"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4"
                        android:text=": Mg Kaung"
                        android:id="@+id/pweight"
                        android:textColor="@color/black"
                        android:padding="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2.4">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/blue_A400"
                        android:text="@string/patient_blood_pressure"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4"
                        android:text=": Mg Kaung"
                        android:textSize="12sp"
                        android:id="@+id/pbloodpressure"
                        android:textColor="@color/black"
                        android:padding="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2.4">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/blue_A400"
                        android:text="@string/patient_reactionalert"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4"
                        android:text=": Mg Kaung"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:id="@+id/pcomment"
                        android:padding="5dp"/>
                </LinearLayout>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_gravity="left"
                    android:padding="8dp"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:text="@string/special_question"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:id="@+id/rc_question_answer"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.core.widget.NestedScrollView>
    <mk.zawuni.zawgyiuni_detect.mmfont.components.MMButton
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        android:textSize="12sp"
        android:paddingBottom="5dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded_corner_btn_blue"
        android:id="@+id/btn_close"
        android:text="@string/close"/>

</RelativeLayout>
