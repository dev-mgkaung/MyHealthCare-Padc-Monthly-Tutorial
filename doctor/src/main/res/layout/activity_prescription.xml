<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/medical_record_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:elevation="2dp">
        <TextView
            android:layout_gravity="left"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_baseline_arrow_back_ios_24"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:id="@+id/tex_back"
            android:text="@string/medical_record"/>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="70dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                app:cardElevation="5dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/white">
                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_corner_btn_white"
                    android:hint="@string/medical_record_hint"
                    android:padding="10dp"
                    android:textSize="12sp"
                    android:inputType="textMultiLine"
                    android:gravity="left"
                    android:scrollbars="vertical"
                    android:id="@+id/medical_comment"
                    android:layout_margin="5dp"/>
                <LinearLayout
                    android:layout_margin="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="50dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_rounded_corner_grey"
                        android:hint="@string/search"
                        android:padding="10dp"
                        android:textSize="13sp"
                        android:singleLine="true"
                        android:gravity="left"
                        android:scrollbars="vertical"
                        android:drawableRight="@drawable/ic_baseline_search_24"
                        android:id="@+id/search_medicine"
                        android:layout_margin="5dp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/medical_recyclerview"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <mk.zawuni.zawgyiuni_detect.mmfont.components.MMButton
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:textSize="12sp"
            android:paddingBottom="5dp"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rounded_corner_btn_blue"
            android:id="@+id/btn_finish_consultation"
            android:text="@string/finish_consultation"/>
    </RelativeLayout>

</LinearLayout>