<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:background="@color/grey_100"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/back"
            android:layout_margin="10dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:drawableLeft="@drawable/ic_baseline_arrow_back_ios_24"
            android:text="@string/register_form"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="@string/username"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"/>
                <androidx.cardview.widget.CardView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    app:cardElevation="3dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/white">
                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner_btn_white"
                    android:hint="သင့်အမည်"
                    android:padding="10dp"
                    android:textSize="13sp"
                    android:maxLines="1"
                    android:id="@+id/etUserName"
                    android:layout_margin="5dp"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="ဖုန်းနံပါတ်"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"/>
                <androidx.cardview.widget.CardView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    app:cardElevation="3dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/white">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner_btn_white"
                        android:hint="@string/phone"
                        android:padding="10dp"
                        android:textSize="12sp"
                        android:singleLine="true"
                        android:inputType="phone"
                        android:id="@+id/etPphone"
                        android:layout_margin="5dp"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="@string/email"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"/>
                <androidx.cardview.widget.CardView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    app:cardElevation="3dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/white">

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner_btn_white"
                    android:hint="@string/email_hint"
                    android:padding="10dp"
                    android:textSize="13sp"
                    android:maxLines="1"
                    android:inputType="textEmailAddress"
                    android:id="@+id/etEmail"
                    android:layout_margin="5dp"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="@string/password"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"/>
                <androidx.cardview.widget.CardView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    app:cardElevation="3dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/white">

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner_btn_white"
                    android:hint="@string/password_hint"
                    android:padding="10dp"
                    android:id="@+id/etPassword"
                    android:textSize="13sp"
                    android:maxLines="1"
                    android:inputType="text"
                    android:layout_margin="5dp"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="@string/specialitsname"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"/>
                <androidx.cardview.widget.CardView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    app:cardElevation="3dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/white">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:entries="@array/speciality_name_list"
                    android:id="@+id/specialname_spinner"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="@string/experience"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"/>
                <androidx.cardview.widget.CardView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    app:cardElevation="3dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/white">

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner_btn_white"
                    android:hint="၂ နှစ်"
                    android:padding="10dp"
                    android:id="@+id/ed_experience"
                    android:textSize="13sp"
                    android:inputType="phone"
                    android:layout_margin="5dp"/>
                </androidx.cardview.widget.CardView>
                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="@string/address"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"/>
                <androidx.cardview.widget.CardView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    app:cardElevation="3dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/white">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner_btn_white"
                        android:hint="လိပ်စာ အပြည့်စုံဖြည့်သွင်းပါ"
                        android:padding="10dp"
                        android:scrollbars="vertical"
                        android:id="@+id/ed_address"
                        android:maxLines="3"
                        android:lines="3"
                        android:textSize="13sp"
                        android:maxLength="2000"
                        android:gravity="left"
                        android:textColor="@color/black"
                        android:inputType="textMultiLine"
                        android:layout_margin="5dp"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="@string/patient_dateOfbirth"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:weightSum="3"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        app:cardElevation="3dp"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="@color/white">
                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:padding="5dp"
                            android:spinnerMode="dialog"
                            android:entries="@array/days"
                            android:id="@+id/day_spinner"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        app:cardElevation="3dp"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="@color/white">
                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:padding="5dp"
                            android:spinnerMode="dialog"
                            android:entries="@array/months"
                            android:id="@+id/month_spinner"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        app:cardElevation="3dp"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="@color/white">
                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:padding="5dp"
                            android:spinnerMode="dialog"
                            android:entries="@array/years"
                            android:id="@+id/year_spinner"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="@string/gender"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"/>
                <androidx.cardview.widget.CardView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    app:cardElevation="3dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/white">
                    <RadioGroup
                        android:id="@+id/gradio_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                    <RadioButton
                        android:id="@+id/male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="အမျိုးသား"/>

                    <RadioButton
                        android:layout_marginLeft="20dp"
                        android:id="@+id/female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="အမျိုးသမီး"/>
                    </RadioGroup>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="@string/degree"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"/>
                <androidx.cardview.widget.CardView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    app:cardElevation="3dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/white">

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner_btn_white"
                    android:hint="ရရှိထားသောဘွဲ့များးအပြည့်စုံဖြည့်သွင်းပါ"
                    android:padding="10dp"
                    android:scrollbars="vertical"
                    android:id="@+id/ed_degree"
                    android:maxLines="3"
                    android:lines="3"
                    android:textSize="13sp"
                    android:maxLength="2000"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:inputType="textMultiLine"
                    android:layout_margin="5dp"/>
                </androidx.cardview.widget.CardView>
             <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="@string/biography"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"/>
                <androidx.cardview.widget.CardView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    app:cardElevation="3dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/white">


                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner_btn_white"
                    android:hint="ကိုယ်ရေးရာဇဝင် အပြည့်စုံဖြည့်သွင်းပါ"
                    android:padding="10dp"
                    android:id="@+id/ed_biography"
                    android:textSize="13sp"
                    android:maxLines="5"
                    android:lines="5"
                    android:scrollbars="vertical"
                    android:maxLength="3000"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:inputType="textMultiLine"
                    android:layout_margin="5dp"/>
                </androidx.cardview.widget.CardView>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:padding="6dp"
                    android:layout_margin="10dp"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_corner_btn_blue"
                    android:id="@+id/btnRegister"
                    android:text="@string/register"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:text="@string/already"
                        android:textSize="13sp"
                        android:textColor="@color/black" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:layout_marginLeft="8dp"
                        android:textAlignment="center"
                        android:text="@string/login"
                        android:textSize="13sp"
                        android:textColor="@color/blue_A400" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</RelativeLayout>