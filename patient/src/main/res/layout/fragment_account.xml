<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:elevation="3dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:elevation="5dp"
            android:id="@+id/account_btngroup"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/txt_back"
            android:drawableLeft="@drawable/ic_baseline_arrow_back_ios_24"
            android:layout_margin="15dp"
            android:text="ပရိုဖိုင်"
            android:textSize="12sp"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:textColor="@color/black"
            android:layout_margin="15dp"
            android:src="@drawable/edit"
            android:id="@+id/imgedit"
            android:textStyle="bold"
            android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_marginBottom="100dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_profile"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="311dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/user"
                    android:layout_margin="10dp"/>


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="@string/username"
                android:textStyle="bold"
                android:textColor="@color/teal_900"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_border_grey"
                android:hint="UserName"
                android:padding="18dp"
                android:textSize="12sp"
                android:editable="false"
                android:id="@+id/etUserName"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="@string/email"
                android:textStyle="bold"
                android:textColor="@color/teal_900"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_border_grey"
                android:hint="Email"
                android:padding="18dp"
                android:textSize="12sp"
                android:id="@+id/etEmail"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="@string/phone"
                android:textStyle="bold"
                android:textColor="@color/teal_900"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_border_grey"
                android:padding="18dp"
                android:textSize="12sp"
                android:id="@+id/etphone"
                android:text="@string/profile_data"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="@string/patient_dateOfbirth"
                android:textStyle="bold"
                android:textColor="@color/teal_900"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_border_grey"
                android:padding="18dp"
                android:textSize="12sp"
                android:text="@string/profile_data"
                android:id="@+id/et_dateofbirth"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="@string/patient_blood_type"
                android:textStyle="bold"
                android:textColor="@color/teal_900"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_border_grey"
                android:padding="18dp"
                android:text="@string/profile_data"
                android:textSize="12sp"
                android:id="@+id/et_bloodtype"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="@string/patient_height"
                android:textStyle="bold"
                android:textColor="@color/teal_900"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_border_grey"
                android:padding="18dp"
                android:text="@string/profile_data"
                android:textSize="12sp"
                android:id="@+id/et_height"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="@string/patient_reactionalert"
                android:textStyle="bold"
                android:textColor="@color/teal_900"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_border_grey"
                android:textSize="12sp"
                android:text="@string/profile_data"
                android:padding="18dp"
                android:id="@+id/et_comment"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="@string/address"
                android:textStyle="bold"
                android:textColor="@color/teal_900"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_border_grey"
                android:textSize="12sp"
                android:text="@string/profile_data"
                android:padding="18dp"
                android:id="@+id/et_address"
                android:layout_margin="10dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:padding="6dp"
                    android:layout_margin="10dp"
                    android:textColor="@color/teal_900"
                    android:id="@+id/btnLogout"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:text="@string/logout"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:padding="6dp"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_margin="10dp"
                    android:textColor="@color/teal_900"
                    android:layout_alignParentRight="true"
                    android:id="@+id/forgetpassword"
                    android:text="@string/forget_password"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>